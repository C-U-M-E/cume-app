{
  "openapi": "3.0.0",
  "info": {
    "title": "CUME API",
    "description": "Documentação da API do sistema CUME",
    "version": "1.0.0",
    "contact": {
      "name": "Equipe CUME"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "required": ["name", "email", "password", "cpf"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" },
          "birthDate": { "type": "string", "format": "date" },
          "rg": { "type": "string" },
          "cpf": { "type": "string" },
          "userType": { 
            "type": "string", 
            "enum": ["standard", "admin"],
            "default": "standard" 
          }
        }
      },
      "LoginInput": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email", "example": "felipe@cume.com" },
          "password": { "type": "string", "format": "password", "example": "123456" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "user": { "$ref": "#/components/schemas/User" },
          "token": { "type": "string", "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." }
        }
      },
      "UserCard": {
        "type": "object",
        "properties": {
          "canClimb": { "type": "boolean" },
          "eligibilityStatus": { "type": "string" },
          "card": {
            "type": "object",
            "properties": {
              "fullName": { "type": "string" },
              "birthDate": { "type": "string", "format": "date" },
              "photoUrl": { "type": "string", "nullable": true },
              "documentLabel": { "type": "string" },
              "documentMasked": { "type": "string" },
              "issueDate": { "type": "string", "format": "date-time" },
              "expirationDate": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/users": {
      "post": {
        "summary": "Cria um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado com sucesso" },
          "400": { "description": "Dados inválidos" }
        }
      },
      "get": {
        "summary": "Lista todos os usuários (Protegido)",
        "tags": ["Users"],
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          },
          "401": { "description": "Token inválido" }
        }
      }
    },
    "/membership-card": {
      "get": {
        "summary": "Visualizar carteirinha do usuário logado",
        "tags": ["Users"],
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "Dados da carteirinha recuperados com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserCard" }
              }
            }
          },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Usuário não encontrado" }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Realiza login",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/documents/upload": {
      "post": {
        "summary": "Upload de documentos para assinatura do termo",
        "tags": ["Documents"],
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "document": {
                    "type": "string",
                    "format": "binary",
                    "description": "Arquivo do Termo Assinado (PDF)"
                  },
                  "photo": {
                    "type": "string",
                    "format": "binary",
                    "description": "Foto de Perfil / Avatar (Imagem)"
                  },
                  "identity_document": {
                    "type": "string",
                    "format": "binary",
                    "description": "Foto do RG ou CNH (Imagem)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Documentos enviados com sucesso" },
          "400": { "description": "Arquivos ausentes" },
          "401": { "description": "Não autorizado" }
        }
      }
    }
  }
}